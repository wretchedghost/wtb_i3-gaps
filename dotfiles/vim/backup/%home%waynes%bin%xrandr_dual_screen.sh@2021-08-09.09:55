#!/bin/sh

laptop="eDP1"
external="DP1"
hdmi="HDMI1"

xrandr --output $external --off \
  --output $hdmi --off \
  --output $laptop --primary --auto

xrandr --dpi 168
#!/bin/sh
xrandr --output eDP1 --primary --mode 1920x1080 --pos 0x0 --rotate normal --output DP1 --mode 1920x1080 --pos 1920x0 --rotate normal --output DP2 --off --output HDMI1 --off --output VIRTUAL1 --off
